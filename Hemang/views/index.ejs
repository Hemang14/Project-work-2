<body>
  <section id="title">
    <div class="container-fluid">
      <!-- Nav Bar -->
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="logo">
            <img style="width: 200px; height: 60px;" src="/images/fika_logo2.png">
        </div>
